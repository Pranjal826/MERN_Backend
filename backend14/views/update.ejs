<%-include('./partials/header')%>
<%-include('./partials/nav')%>

<body>
    <h1>Update Post</h1>
    <form action="/update-post/<%= index %>" method="POST">
        <label for="profileimage">Profile Image URL:</label>
        <input type="text" name="profileimage" id="profileimage" value="<%= post.profileimage %>" required>

        <label for="postimage">Post Image URL:</label>
        <input type="text" name="postimage" id="postimage" value="<%= post.postimage %>" required>

        <label for="title">Title:</label>
        <input type="text" name="title" id="title" value="<%= post.title %>" required>

        <label for="posttext">Post Text:</label>
        <textarea name="posttext" id="posttext" rows="4" required><%= post.posttext %></textarea>

        <button type="submit">Update Post</button>
    </form>
    <a href="/read-posts">Cancel</a>
</body>
</html>
