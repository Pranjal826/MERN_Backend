<%- include('./partials/header') %>
<link rel="stylesheet" href="../stylesheets/update.css">
<%- include('./partials/nav') %>
<div class="update-form">
    <h1>Update Task</h1>
    <form action="/update/<%= idx %>" method="post"> <!-- Updated action attribute -->
        <label for="id">Id</label>
        <input type="number" name="id" value="<%= task.id %>" >
        <br />

        <label for="name">Name</label>
        <input type="text" name="name" value="<%= task.name %>" >
        <br />

        <label for="title">Title</label>
        <input type="text" name="title" value="<%= task.title %>" >
        <br />

        <label for="desc">Content</label>
        <textarea name="desc" ><%= task.description %></textarea>
        <br />

        <label for="date">Date</label>
        <input type="date" name="date" value="<%= task.date %>" >
        <br />

        <button type="submit">Update Task</button>
    </form>
</div>

<%- include('./partials/footer') %>
