<%- include('./partials/header') %>
<link rel="stylesheet" type="text/css" href="/stylesheets/update.css">
<div class="container">
  <h1>Edit User Data</h1>
  <form action="/update/<%= user._id %>" method="POST">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="<%= user.name %>" required>
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" value="<%= user.email %>" required>
    <label for="post">Post:</label>
    <input type="text" id="post" name="post" value="<%= user.dp %>" required>
    <label for="dp">DP:</label>
    <input type="text" id="dp" name="dp" value="<%= user.dp %>" required>
    <button type="submit">Update</button>
  </form>
</div>
